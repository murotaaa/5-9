<p><%= notice %></p>
<div class="container">
  <h2>Editing Book</h2>
  <%= form_for(@book) do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
   <% end %>
<p><%= link_to 'show', book_path(@book.id) %>|<%= link_to 'back', books_path %></p>
</div>