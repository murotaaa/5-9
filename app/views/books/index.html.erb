<p><%= notice %></p>
<div class="container">
  <div class="row">
  	<div class="col-lg-3">
  	  <%= render 'books/user_menu', book: @book, user: current_user %>
      <%# ↑部分テンプレ %>
  	</div>
  	<div class="col-lg-9">
  	  <h2>Books</h2>
  	  <table class="table">
  	  	<thead>
	  	  <tr>
	  	    <th></th>
	  	    <th>Title</th>
	  	    <th>Opinion</th>
	  	  </tr>
	  	</thead>
	  	<tbody>
	  	 <% @books.each do |book| %>
	  	  <tr>
