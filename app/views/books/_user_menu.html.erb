<h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %><br>
  <table class="table">
  	<tbody>
  	  <tr>
  	    <td>name</td>
  	    <td><%= user.name %></td>
  	  </tr>
  	  <tr>
  	    <td>introduction</td>
  	    <td><%= user.introduction %></td>
  	  </tr>
  	</tbody>
  </table>
  <%= link_to "", edit_user_path(user.id), class: "btn btn-default btn-block glyphicon glyphicon-wrench" %>
<h2>New book</h2>
  <div class="row">
    <%= form_for(book) do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title, class: "col-lg-12" %>
    <h4>Opinion</h4>
      <%= f.text_area :body, class: "col-lg-12" %><br>
    <%= f.submit 'Create Book', class: "btn btn-primary btn-block" %>
    <% end %>
  </div>